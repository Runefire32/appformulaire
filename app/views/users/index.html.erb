<h1>Utilisateurs</h1>
<div style="background-color: #b3ffb3; border-radius: 25px; ">



<table>
  <thead>
    <br>
    <tr>
      <th>Pseudo</th>
      <th>Email</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.bio %></td>
       <td>
       <div class="btn btn-success">
        <%= link_to 'Voir plus', user %>
        </div>
        </td>
        <td>
        <div class="btn btn-success">
        <%= link_to 'Modifier', edit_user_path(user) %>
        </div>
        </td>
        <td>
        <div class="btn btn-success">
        <%= link_to 'Supprimer à tout jamais', user, method: :delete, data: { confirm: 'As-tu mûrement réféchi à ta décision et aux conséquences que cela implique mon frère ?' } %>
        </div>
       
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
<%= link_to 'Nouvel utilisateur', new_user_path %>
